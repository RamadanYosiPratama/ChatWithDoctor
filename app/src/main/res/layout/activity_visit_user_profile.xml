<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/ns"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".VisitUserProfileActivity">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/rl"
        android:layout_height="match_parent"
        android:padding="30dp"
        tools:context=".VisitUserProfileActivity">



        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/cover_display"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/logo_png"
                        android:layout_marginBottom="20dp">
                    </ImageView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_display"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="170dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profile">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <TextView
                        android:id="@+id/tx1t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama :"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:layout_below="@+id/profile_display"
                        android:layout_marginBottom="5dp"
                        ></TextView>
                    <TextView
                        android:id="@+id/username_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="username"
                        android:layout_below="@+id/profile_display"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorDarkGray"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category Dokter :"
                        android:layout_below="@+id/username_display"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/category_docter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cateogry"
                        android:layout_below="@+id/txt2"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorDarkGray"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tempat Praktek Dokter :"
                        android:layout_below="@+id/category_docter"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/tempat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tempat"
                        android:layout_below="@+id/txt3"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorDarkGray"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anggota IDI Cabang :"
                        android:layout_below="@+id/tempat"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/anggota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="anggota"
                        android:layout_below="@+id/txt4"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorDarkGray"
                        android:textStyle="bold"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/txt5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIP Number :"
                        android:layout_below="@+id/anggota"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/sip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sipnumer"
                        android:layout_below="@+id/txt5"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorDarkGray"
                        android:textStyle="bold"
                        android:layout_marginBottom="50dp"
                        >
                    </TextView>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>



        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv1"
            android:gravity="center"
            android:background="@color/WhitetrialColor"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:padding="6dp">
        </LinearLayout>

        <!--    <Button-->
        <!--        android:id="@+id/send_konsul"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_marginTop="20dp"-->
        <!--        android:layout_below="@+id/lll"-->
        <!--        android:textColor="@color/WhitetrialColor"-->
        <!--        android:textAllCaps="false"-->
        <!--        android:text="Konsultasi"-->
        <!--        android:background="@drawable/btn_background_two"-->
        <!--        ></Button>-->


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
