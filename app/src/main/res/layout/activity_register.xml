<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"

    tools:context=".RegisterActivity"
    android:layout_width="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/imglogoregister"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cari Klinik terdekat\nuntuk cari obat dan layanan - layanan lain nya"
            android:layout_gravity="start"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/asap"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/username_register"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:hint="Username"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:background="@drawable/btn_back_edt"
            android:layout_marginTop="50dp">
        </EditText>
        <EditText
            android:id="@+id/email_register"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:background="@drawable/btn_back_edt"
            android:layout_marginTop="10dp">
        </EditText>
        <EditText
            android:id="@+id/alamat_register"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:hint="Alamat"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:background="@drawable/btn_back_edt"
            android:layout_marginTop="10dp">
        </EditText>
        <EditText
            android:id="@+id/pekerjaan_register"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:hint="Pekerjaan"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:background="@drawable/btn_back_edt"
            android:layout_marginTop="10dp">
        </EditText>

        <EditText
            android:id="@+id/password_register"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:hint="password"
            android:paddingLeft="15dp"
            android:background="@drawable/btn_back_edt"
            android:layout_marginTop="10dp">
        </EditText>
        <Button
            android:id="@+id/btn_register"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/WhitetrialColor"
            android:background="@drawable/btn_background_two"
            android:letterSpacing="0.0"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/doctorregister"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yuk Daftar..."
            android:gravity="center"/>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>